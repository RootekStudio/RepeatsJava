<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rootekstudio.repeatsandroid">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/DarkAppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <receiver android:name=".OnSystemBoot"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.rootekstudio.repeatsandroid.activities.AddEditSetActivity"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
        <activity android:name=".activities.MainActivity">
        </activity>

        <receiver
            android:name=".notifications.RepeatsQuestionSend"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".UserReply"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activities.AnswerActivity"
            android:label=""
            android:theme="@style/transculentTheme" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/Settings"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </activity>
        <activity android:name=".activities.TestActivity"
            android:screenOrientation="locked"
            android:label="@string/Test"/>
        <activity android:name=".activities.SearchActivity"
            android:label="@string/Search">
        </activity>
        <activity android:name=".activities.AddEditSetActivity"
            android:label="@string/title_activity_repeats_add_edit" />
        <activity android:name=".activities.TestResultsActivity"
            android:label="@string/Test"/>
        <activity android:name=".activities.SplashScreenActivity"
            android:theme="@style/SplashScreenTheme"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.EnableSetsListActivity"
            android:label="@string/notifiFromSets"/>
    </application>

</manifest>