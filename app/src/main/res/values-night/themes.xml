<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Repeats" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#121212</item>
        <item name="colorPrimaryVariant">#121212</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="tint">#FFFFFF</item>
        <item name="iconTint">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="scrimBackground">#000000</item>

        <item name="android:navigationBarColor" tools:targetApi="o_mr1">#121212</item>
        <item name="alertDialogTheme">@style/customDialog</item>
        <item name="android:alertDialogTheme">@style/customDialog</item>

        <item name="bottomAppBarStyle">@style/bottomAppBar</item>
        <item name="customButtonColor">@color/buttonDark</item>
        <item name="customItemColor">@color/darkMainItem</item>
        <item name="customEditTextColor">@color/darkEditTextColor</item>

        <item name="android:homeAsUpIndicator">@drawable/back</item>
    </style>

    <style name="bottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="colorOnSurface">#121212</item>
        <item name="android:backgroundTint">#141414</item>
        <item name="android:tint">#000000</item>
        <item name="backgroundTint">#000000</item>
        <item name="iconTint">#FFFFFF</item>
    </style>

    <style name="translucentTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="customItemColor">@color/darkMainItem</item>
        <item name="customEditTextColor">@color/darkEditTextColor</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">?attr/splashScreenColor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:alertDialogTheme">@style/customDialog</item>
        <item name="alertDialogTheme">@style/customDialog</item>
    </style>

    <style name="customDialog" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_shape</item>
    </style>
</resources>
