<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/RelativeMAIN"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/lightMainItem"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/Avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />

        <TextView
            android:id="@+id/NameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set name"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:layout_toLeftOf="@id/Test"
            android:maxLines="2"
            android:lines="2"
            android:layout_toRightOf="@id/Avatar"
            android:layout_toStartOf="@id/Test"
            android:layout_toEndOf="@id/Avatar" />

    <ImageButton
        android:id="@+id/DelSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete_forever_white"
        android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/DelSet"
            android:src="@drawable/ic_checktest_white"
            android:layout_toStartOf="@id/DelSet" />

        <TextView
            android:id="@+id/DateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="01.01.2019"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>
