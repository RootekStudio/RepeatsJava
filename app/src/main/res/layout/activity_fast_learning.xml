<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fastlearning.FastLearningActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:id="@+id/linearFastLearningLogo">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_checktest"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/FastLearning"
            android:layout_gravity="center"
            android:textSize="8pt"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/exit_24dp"
        android:layout_alignParentEnd="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:cropToPadding="true"
        android:onClick="exitClick"/>
    <TextView
        android:id="@+id/setNameFastLearning"
        android:layout_below="@id/linearFastLearningLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="8pt"
        android:textStyle="bold"/>

    <ScrollView
        android:id="@+id/scrollViewFastLearning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/setNameFastLearning"
        android:layout_above="@id/relativeBottomInfo"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:background="@drawable/layout_mainshape"
            android:elevation="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question2"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/imageViewFastLearning"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:tint="@android:color/transparent"
                app:tint="@android:color/transparent"/>
            <TextView
                android:id="@+id/questionTextViewFL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12pt"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer2"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/userAnswerTextViewFL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:textAlignment="center"
                android:hint="@string/enterAnswer"
                android:textSize="12pt"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"/>

            <LinearLayout
                android:id="@+id/linearGoodAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/correctAnswer"
                    android:textAlignment="center"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/correctAnswerTextViewFL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="12pt"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/greenRepeats"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearOtherAnswers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/allCorrectAnswers"
                    android:textAlignment="center"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/otherCorrectAnswersTextViewFL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="12pt"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/greenRepeats"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/relativeBottomInfo"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/ic_check"
        app:backgroundTint="@color/greenRepeats"
        android:onClick="fabClick"/>

    <RelativeLayout
        android:id="@+id/relativeBottomInfo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">
        <ProgressBar
            android:id="@+id/progressBarFastLearning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:layout_marginBottom="-6dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/percentFastLearning">
            <TextView
                android:id="@+id/goodAnswersCountFL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/greenRepeats"
                android:textSize="8pt"
                android:textAlignment="center"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"/>
            <TextView
                android:id="@+id/wrongAnswersCountFL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/redRepeats"
                android:textSize="8pt"
                android:textAlignment="center"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/allAnswersCountFL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/percentFastLearning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="10pt"/>

        <TextView
            android:id="@+id/fastLearningTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"/>

    </RelativeLayout>

</RelativeLayout>