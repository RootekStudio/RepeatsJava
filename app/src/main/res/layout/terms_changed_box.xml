<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_mainshape"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true"
    android:onClick="termsChangedMain">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privacy_policy_updated"
        android:id="@+id/welcomeTextUpdateInfo"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="5dp"
        android:textSize="8.5pt"
        android:layout_toStartOf="@id/termsClose"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_here_to_read"
        android:layout_below="@id/welcomeTextUpdateInfo"
        android:textSize="6pt"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp" />

    <ImageView
        android:id="@+id/termsClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clear"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:focusable="true"
        android:onClick="termsChangedClose"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"/>
</RelativeLayout>
