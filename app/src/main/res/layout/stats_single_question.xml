<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/questionTextViewStats"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/goodAnswersSingleStats"
        android:text="@string/Question"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/answerTextViewStats"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/questionTextViewStats"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/goodAnswersSingleStats"
        android:text="@string/Answer"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/allAnswersSingleStats"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="="
        android:textAlignment="center"
        android:textColor="#A9A9A9"
        app:autoSizeTextType="uniform"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/wrongAnswersSingleStats"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/allAnswersSingleStats"
        android:gravity="center"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@color/redRepeats"
        app:autoSizeTextType="uniform"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/goodAnswersSingleStats"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/wrongAnswersSingleStats"
        android:gravity="center"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@color/greenRepeats"
        app:autoSizeTextType="uniform"
        android:padding="5dp"/>
</RelativeLayout>
