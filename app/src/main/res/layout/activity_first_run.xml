<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/firstRunLogo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="@string/welcome"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/repeats_logo_android" />
    </LinearLayout>

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstRunLogo"
        android:layout_above="@id/navLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/sign_in_button"
                android:drawablePadding="20dp"
                android:padding="20dp"
                android:text="@string/sign_in_email"
                android:textAlignment="center"
                android:elevation="5dp"
                android:textColor="#000000"
                android:clickable="true"
                android:focusable="true"
                android:onClick="emailClicked"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/sign_in_button"
                android:padding="20dp"
                android:text="@string/sign_in_google"
                android:textAlignment="center"
                android:elevation="5dp"
                android:textColor="#000000"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/sign_in_button"
                android:padding="10dp"
                android:text="@string/no_sign_in"
                android:textAlignment="center"
                android:elevation="5dp"
                android:textColor="#000000"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"/>
        </LinearLayout>

    </ViewFlipper>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:id="@+id/navLayout"
        android:layout_alignParentBottom="true">

    </RelativeLayout>


</RelativeLayout>


