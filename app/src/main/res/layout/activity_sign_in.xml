<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/logoSignIn"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/repeats_logo_android" />

    <TextView
        android:id="@+id/signInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/sign_in"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_above="@id/signInOptions"
        android:layout_below="@id/logoSignIn"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/signInOptions">

        <Button
            android:id="@+id/signInViaEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/sign_in_button"
            android:clickable="true"
            android:drawablePadding="20dp"
            android:elevation="5dp"
            android:focusable="true"
            android:onClick="emailClicked"
            android:padding="20dp"
            android:text="@string/sign_in_email"
            android:textAlignment="center"
            android:textColor="#000000" />

        <Button
            android:id="@+id/signInViaGoogle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/signInViaEmail"
            android:layout_gravity="center"
            android:background="@drawable/sign_in_button"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            android:padding="20dp"
            android:text="@string/sign_in_google"
            android:textAlignment="center"
            android:textColor="#000000"
            android:onClick="googleSignIn"/>
    </RelativeLayout>

        <Button
            android:id="@+id/continueWithoutLogin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:text="@string/no_sign_in"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:onClick="continueWithoutSignIn"/>

</RelativeLayout>


