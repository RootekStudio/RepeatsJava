<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ReadAloudActivity">
    <TextView
        android:id="@+id/setNameReadAloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oxford Solutions"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="9pt"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <ScrollView
        android:id="@+id/scrollViewReadAloud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/setNameReadAloud"
        android:layout_above="@id/readingSpeedLinear">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </ScrollView>

    <LinearLayout
        android:id="@+id/readingSpeedLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/linearPlayButtonsRead"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speed_tts"
            android:layout_marginStart="25dp"/>
        <SeekBar
            android:id="@+id/readingSpeedSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:max="200"
            android:progress="50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearPlayButtonsRead"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/skip_previous_24px"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="previousReadClick"/>
        <ImageView
            android:id="@+id/playPauseImageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/pause_24px"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="playPauseClick"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/skip_next_24px"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="nextReadClick"/>
    </LinearLayout>
</RelativeLayout>