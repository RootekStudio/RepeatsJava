<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Repeats" parent="Theme.MaterialComponents.Light">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">#FFFFFF</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#000000</item>
        <item name="android:tint">#000000</item>
        <item name="iconTint">#000000</item>
        <item name="android:textColor">#000000</item>
        <item name="drawableTint">#000000</item>
        <item name="scrimBackground">#FFFFFF</item>
        <item name="actionBarTheme">@style/customActionBar</item>
        <item name="alertDialogTheme">@style/customDialog</item>

        <item name="bottomAppBarStyle">@style/bottomAppBar</item>
        <item name="customButtonColor">@color/buttonLight</item>
        <item name="customItemColor">@color/lightMainItem</item>
        <item name="customEditTextColor">@color/lightEditTextColor</item>

        <item name="android:homeAsUpIndicator">@drawable/back</item>
        <item name="rippleColor">#4D000000</item>
        <item name="editSetButtons">@color/editSetButtonBackgroundLight</item>
    </style>

    <style name="customActionBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorAccent">#000000</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">#000000</item>
    </style>

    <style name="bottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:foregroundTint">#000000</item>
    </style>

    <style name="customDialog" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_shape</item>
    </style>
</resources>
